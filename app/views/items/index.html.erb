<div class="items-homepage">
  <% @items.each do |item| %>
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag item.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-body">
        <h5 class="card-title"><%= item.name %></h5>
          <div class="card-info">
            <p class="card-text"><%= item.description %></p>
            <p class="item-price">$ <%= item.price %>/day</p>
          </div>
          <div class="card-btn1">
            <%= link_to "Reserve", new_user_item_booking_path(current_user.id,item) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
