<div class="newbooking">
  <div class="containerctv">
    <div class="card-trip">
      <%= cl_image_tag @item.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-trip-infos">
        <div>
          <h2><%= @item.name %></h2>
          <p><%= @item.description%></p>
        </div>
        <h2 class="card-trip-pricing">$ <%=@item.price%> /day</h2>
      </div>
    </div>
  </div>

  <div class="formbooking">
    <%= simple_form_for [@user, @item, @booking] do |f| %>
      <%= f.input :start_date, label: "First Day :"  %>
      <%= f.input :end_date, label: "Last Day :" %>
      <%= f.submit 'Reserve', class: 'btn-back2list' %>
    <% end %>
  </div>
</div>
